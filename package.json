{
  "name": "react-modules-lazy-loader",
  "version": "1.0.3",
  "author": "Mariia Zimokha",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "10.0.0",
    "npm": "5.6.0"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./webpack.config.js --mode development ./harness/index.js",
    "build": "webpack --mode production",
    "test": "jest src --coverage",
    "transpile": "babel src -d dist --copy-files",
    "prepublishOnly": "npm run transpile",
    "deploy": "gh-pages -d ./harness/dist",
    "publish-demo": "npm run build && npm run deploy"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/config/setupTest.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "notifyMode": "failure",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "gh-pages": "^2.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.7.0",
    "querystringify": "^2.1.1",
    "react-hot-loader": "^4.9.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.7.0"
  },
  "dependencies": {
    "intersection-observer": "^0.7.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dynamic-import": "^1.0.5"
  }
}
